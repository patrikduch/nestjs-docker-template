{
  "name": "nestjs-restapi-template",
  "version": "1.0.0",
  "description": "Advanced Nest.js template for building REST API webservices.",
  "author": "Patrik Duch",
  "license": "GPL-3.0",
  "scripts": {
    "debug": "nodemon -L --config nodemon-docker-debug.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=dev nodemon",
    "start:debug": "nodemon -L --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "NODE_ENV=prod node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/client": "^3.12.6",
    "@apollo/gateway": "^2.9.3",
    "@apollo/server": "^4.11.3",
    "@nestjs/apollo": "^13.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.7.9",
    "class-validator": "^0.14.1",
    "crypto": "^1.0.1",
    "graphql": "^16.10.0",
    "graphql-tools": "^9.0.11",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "ts-morph": "^25.0.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cqrs": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.1.3",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
