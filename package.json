{
  "name": "nestjs-restapi-template",
  "version": "1.0.0",
  "description": "Advanced Nest.js template for building REST API webservices.",
  "author": "Patrik Duch",
  "license": "GPL-3.0",
  "scripts": {
    "debug": "nodemon -L --config nodemon-docker-debug.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=dev nodemon",
    "start:debug": "nodemon -L --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "NODE_ENV=prod node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/client": "^3.3.20",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/graphql": "^7.11.0",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "apollo-server-express": "^2.25.2",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.1",
    "graphql-tools": "^7.0.5",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^3.0.2",
    "rxjs": "^6.2.2",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.16.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/supertest": "^2.0.5",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
